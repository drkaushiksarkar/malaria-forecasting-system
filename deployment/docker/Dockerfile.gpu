FROM nvidia/cuda:12.1.1-cudnn8-runtime-ubuntu22.04
RUN apt-get update && apt-get install -y python3 python3-pip && rm -rf /var/lib/apt/lists/*
WORKDIR /app
COPY requirements.txt .
RUN pip3 install --no-cache-dir -r requirements.txt torch --index-url https://download.pytorch.org/whl/cu121
COPY . .
EXPOSE 8080
CMD ["python3","-m","uvicorn","src.service.main:app","--host","0.0.0.0","--port","8080"]